<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StarStyle" parent="Theme.MovieApp">
        <item name="tint">@color/colorLightBlue</item>
    </style>

    <style name="TextStyle" parent="Theme.MovieApp">
        <item name="android:textColor">@color/colorDarkBlue</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppBarLayoutStyle" parent="Theme.MovieApp">
        <item name="android:background">@color/blackNight</item>
    </style>

    <style name="DividerStyle" parent="Theme.MovieApp">
        <item name="android:background">@color/colorLightBlue</item>
    </style>

    <style name="BottomSheetBackgroundStyle" parent="Theme.MovieApp">
        <item name="android:backgroundTint">@color/blackNight</item>
    </style>

    <style name="BottomSheetTextStyle" parent="Theme.MovieApp">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorLightBlue</item>
    </style>

    <style name="BottomSheetButtonStyle" parent="Theme.MovieApp">
        <item name="android:backgroundTint">@color/colorLightBlue</item>
        <item name="android:textColor">@color/colorDarkBlue</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>