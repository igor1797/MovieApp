<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav_graph"
    app:startDestination="@id/moviesFragment">

    <fragment
        android:id="@+id/moviesFragment"
        android:name="igor.kuridza.dice.movieapp.ui.fragments.movies.MoviesFragment"
        android:label="movies_fragment"
        tools:layout="@layout/movies_fragment" >
        <action
            android:id="@+id/goToMovieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="igor.kuridza.dice.movieapp.ui.fragments.details.MovieDetailsFragment"
        android:label="MovieDetailsFragment">

        <argument
            android:name="movie"
            app:argType="igor.kuridza.dice.movieapp.model.movie.Movie"
            />
    </fragment>
</navigation>